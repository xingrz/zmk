/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include <dt-bindings/led/led.h>

/ {
	model = "NZ75";
	compatible = "nz75";

	chosen {
		zephyr,code-partition = &code_partition;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,console = &uart1;
		zmk,kscan = &kscan;
		zmk,matrix_transform = &default_transform;
		zmk,underglow = &led_strip;
	};
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&spi0 {
	status = "okay";

	sck-pin = <42>; /* 1.10 */
	mosi-pin = <0xFF>; /* NOT USED */
	miso-pin = <45>; /* 1.13 */

	cs-gpios = <&gpio1 15 GPIO_ACTIVE_LOW>;

	kscan: kscan-gpio-74hc165@0 {
		compatible = "zmk,kscan-gpio-74hc165";
		label = "KSCAN";

		reg = <0>;
		spi-max-frequency = <1000000>;

		chain-length = <2>;
		scan-masks = [FF FF];
		parallel-load-gpios = <&gpio0 2 GPIO_ACTIVE_LOW>;
	};
};

&spi1 {
	status = "okay";

	sck-pin = <13>; /* NOT USED */
	mosi-pin = <29>; /* 0.29 */
	miso-pin = <0xFF>; /* NOT USED */

	led_strip: ws2812@0 {
		compatible = "worldsemi,ws2812-spi";
		label = "WS2812";

		reg = <0>;
		spi-max-frequency = <4000000>;

		chain-length = <16>;
		spi-one-frame = <0x70>;
		spi-zero-frame = <0x40>;
		color-mapping = <LED_COLOR_ID_GREEN LED_COLOR_ID_RED LED_COLOR_ID_BLUE>;
	};
};

&uart1 {
	status = "okay";
	current-speed = <115200>;
	tx-pin = <31>;
	rx-pin = <17>; /* NOT USED */
};

&usbd {
	status = "okay";
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		code_partition: partition@0 {
			label = "code_partition";
			reg = <0x00000000 DT_SIZE_K(992)>;
		};

		storage_partition: partition@f8000 {
			label = "storage";
			reg = <0x000f8000 DT_SIZE_K(32)>;
		};
	};
};
